<Window x:Class="BackupSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Backup Sample" Height="650" Width="980"
        xmlns:converters="clr-namespace:BackupSample.Converters"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:EnumBooleanConverter x:Key="EnumBooleanConverter"/>
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">

        <!-- Main Content -->
        <TabControl Grid.Row="0">
            <!-- Backup Tab -->
            <TabItem Header="Backup">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- File Selection -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,20">
                        <TextBlock Text="Select Items to Backup" Style="{StaticResource HeaderStyle}"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <Button Content="Add Files" Command="{Binding AddFilesCommand}"
                                    Margin="0,0,10,0" Padding="10,5"/>
                            <Button Content="Add Folder" Command="{Binding AddFolderCommand}" Margin="0,0,10,0" Padding="10,5"/>
                            <Button Content="Remove Selected" Command="{Binding RemoveSelectedCommand}"
                                    Padding="10,5"/>
                            <Label Content="Select Volume to Backup:" VerticalAlignment="Center" Margin="10,0,5,0"/>
                            <ComboBox Width="100"
                                ItemsSource="{Binding VolumeList}"
                                SelectedItem="{Binding SelectedVolume}"
                                DisplayMemberPath="Name"
                                Margin="0,0,10,0"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Selected Files List -->
                    <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" Margin="0,0,0,20">
                        <ListBox ItemsSource="{Binding SelectedPaths}" SelectedItem="{Binding SelectedPath}" MinHeight="150">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding}" TextTrimming="CharacterEllipsis"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Border>

                    <!-- Backup Controls -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="Start File Backup" Command="{Binding StartBackupCommand}"
                                IsEnabled="{Binding CanStartBackup}"
                                Background="#007acc" Foreground="White"
                                Padding="20,10" Margin="0,0,10,0" FontWeight="Bold"/>
                        <Button Content="Start Folder Backup" Command="{Binding StartFolderBackupCommand}"
                                IsEnabled="{Binding CanStartBackup}"
                                Background="#007acc" Foreground="White"
                                Padding="20,10" Margin="0,0,10,0" FontWeight="Bold"/>

                        <Button Content="Start Volume Backup"
                            Command="{Binding StartVolumeBackupCommand}"
                            IsEnabled="{Binding CanStartVolumeBackup}"
                            Background="#28a745"
                            Foreground="White"
                            Padding="20,10"
                            FontWeight="Bold"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Recovery Tab -->
            <TabItem Header="Recovery">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                        <TextBlock Text="Available Backups" Style="{StaticResource HeaderStyle}"/>
                        <Button Content="Refresh" Command="{Binding RefreshAvailableBackupsCommand}"
                        Margin="20,0,0,0" Padding="10,5"/>
                    </StackPanel>

                    <DataGrid Grid.Row="1" ItemsSource="{Binding AvailableBackups}"
                              SelectedItem="{Binding SelectedBackup}"
                              AutoGenerateColumns="False" IsReadOnly="True" Margin="0,0,0,10" MinHeight="120">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Backup ID" Binding="{Binding Id}" Width="*"/>
                            <DataGridTextColumn Header="Date" Binding="{Binding Timestamp, StringFormat=yyyy-MM-dd HH:mm}" Width="160"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="100"/>
                            <DataGridTextColumn Header="Target" Binding="{Binding Target}" Width="100"/>
                            <DataGridTextColumn Header="Files" Binding="{Binding Files.Count}" Width="100"/>
                            <DataGridTextColumn Header="Size" Binding="{Binding TotalSize, Converter={StaticResource BytesConverter}}" Width="80"/>
                            <DataGridTextColumn Header="Compressed Size" Binding="{Binding CompressedSize, Converter={StaticResource BytesConverter}}" Width="80"/>

                            <DataGridTemplateColumn Header="View Files" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="View" Command="{Binding DataContext.ViewFilesCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Recovery to:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBox Text="{Binding RecoveryLocation}" Width="250" Margin="0,0,10,0"/>
                        <Button Content="Browse" Command="{Binding BrowseRecoveryLocationCommand}" Padding="10,5" Margin="0,0,10,0"/>
                        <Label Content="Volume:" VerticalAlignment="Center" Margin="10,0,5,0"/>
                        <ComboBox Width="100"
                                ItemsSource="{Binding VolumeList}"
                                SelectedItem="{Binding VolumeRecoveryLocation}"
                                DisplayMemberPath="Name"
                                Margin="0,0,10,0"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                            <RadioButton Content="上書き" GroupName="RecoveryOption" Margin="0,7,0,0"
                                IsChecked="{Binding SelectedRecoveryOption, Converter={StaticResource EnumBooleanConverter}, ConverterParameter=Overwrite}" />
                            <RadioButton Content="スキップ" GroupName="RecoveryOption" Margin="10,7,0,0"
                                IsChecked="{Binding SelectedRecoveryOption, Converter={StaticResource EnumBooleanConverter}, ConverterParameter=Skip}" />
                            <RadioButton Content="リネーム" GroupName="RecoveryOption" Margin="10,7,0,0"
                                IsChecked="{Binding SelectedRecoveryOption, Converter={StaticResource EnumBooleanConverter}, ConverterParameter=Rename}" />

                        </StackPanel>

                    </StackPanel>

                    <DataGrid Grid.Row="3" ItemsSource="{Binding SelectedBackupFiles}" AutoGenerateColumns="False" MinHeight="150">
                        <DataGrid.Columns>
                            <DataGridCheckBoxColumn Header="Select" Width="50" Binding="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                <DataGridCheckBoxColumn.ElementStyle>
                                    <Style TargetType="CheckBox">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridCheckBoxColumn.ElementStyle>
                                <DataGridCheckBoxColumn.EditingElementStyle>
                                    <Style TargetType="CheckBox">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridCheckBoxColumn.EditingElementStyle>
                            </DataGridCheckBoxColumn>

                            <DataGridTextColumn Header="File Path" Binding="{Binding FilePath}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,10">
                        <Button Content="Recovery Selected Recovery Point"
                            Command="{Binding RecoveryBackupCommand}"
                            IsEnabled="{Binding CanRecovery}"
                            Background="#28a745" Foreground="White"
                            Padding="20,10" FontWeight="Bold"
                            Margin="0,0,10,0"/>

                        <Button Content="Restore Selected Files"
                            Command="{Binding RestoreSelectedFilesCommand}"
                            IsEnabled="{Binding CanRecoveryFile}"
                            Background="#28a745" Foreground="White"
                            Padding="20,10" FontWeight="Bold"
                            Margin="0,0,10,0"/>

                        <Button Content="Restore Selected Volume"
                            Command="{Binding RestoreSelectedVolumeCommand}"
                            IsEnabled="{Binding CanRecoveryVolume}"
                            Background="#28a745" Foreground="White"
                            Padding="20,10" FontWeight="Bold"
                            Margin="0,0,10,0"/>

                        <Button Content="📁 Mount as Virtual Drive"
                            Command="{Binding MountBackupCommand}"
                            IsEnabled="{Binding CanMountBackup}"
                            Background="#007bff" Foreground="White"
                            Padding="20,10" FontWeight="Bold"
                            Margin="0,0,10,0"
                            ToolTip="Mount backup to browse and copy files like a regular drive"/>

                        <Button Content="⏏ Unmount Drive"
                            Command="{Binding UnmountBackupCommand}"
                            IsEnabled="{Binding CanUnmountBackup}"
                            Background="#dc3545" Foreground="White"
                            Padding="20,10" FontWeight="Bold"
                            Margin="0,0,10,0"/>

                        <Button Content="🗂 Open Mounted Drive"
                            Command="{Binding OpenMountedDriveCommand}"
                            IsEnabled="{Binding IsBackupMounted}"
                            Background="#17a2b8" Foreground="White"
                            Padding="20,10" FontWeight="Bold"
                            Visibility="{Binding IsBackupMounted, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    </StackPanel>

                    <StackPanel Grid.Row="5" Orientation="Horizontal" Margin="0,10,0,0"
                                Visibility="{Binding IsBackupMounted, Converter={StaticResource BoolToVisibilityConverter}}">
                        <TextBlock Text="✓ Backup Mounted: " FontWeight="Bold" Foreground="Green" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding MountedDriveLetter, StringFormat={}{0}:\\}" 
                                   FontWeight="Bold" Foreground="Green" VerticalAlignment="Center" Margin="5,0,0,0"/>
                        <TextBlock Text=" - You can now browse and copy files from Windows Explorer" 
                                   FontStyle="Italic" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>